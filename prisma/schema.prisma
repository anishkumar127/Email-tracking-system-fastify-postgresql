generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model EmailTracking {
  id          Int      @id @default(autoincrement())
  emailId     String
  userId      String
  readAt      DateTime
  lastPingAt  DateTime
  duration    Int      @default(0) // Duration in seconds
}