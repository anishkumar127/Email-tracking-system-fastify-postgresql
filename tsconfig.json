{
    "compilerOptions": {
        // "types": ["vitest/globals"],
        "module": "commonjs",
        "incremental": true,
        "target": "ES2022",
        // "strict": true,
        // "explainFiles": true,
        "lib": ["ESNext"],
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        // "baseUrl": ".",
        // "rootDir": ".",
        "outDir": "./dist",
        // "paths": {
        //     "~/*": ["src/*"]
        // },
        "strictBindCallApply": false,
        "strictNullChecks": true, // TODO: previously was false.
        "noFallthroughCasesInSwitch": false,
        "noImplicitAny": false,
        "declaration": true,
        "removeComments": true,
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": false,
        "skipLibCheck": true
    },
    "include": ["src/**/*", "tests", "tests"],
    "exclude": ["node_modules", "scripts", "dist", "test","**/*spec.ts"]
}
