{
    "compilerOptions": {
        "types": ["node"],
        // "types": ["vitest/globals"],
        "module": "commonjs",
        "incremental": true,
        "target": "ES2022",
        // "strict": true,
        // "explainFiles": true,
        "lib": ["ES2022"],
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "outDir": "./dist",
        "strictBindCallApply": false,
        "strictNullChecks": true, // TODO: previously was false.
        "strict": true,
        "noFallthroughCasesInSwitch": false,
        "noImplicitAny": false,
        "declaration": true,
        "removeComments": true,
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": false,
        "skipLibCheck": true,
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "scripts", "dist", "test","**/*spec.ts"]
}
